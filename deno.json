{
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "nodeModulesDir": "auto",
  "tasks": {
    "dev": "deno run --watch --allow-read --allow-write --allow-sys --allow-env --allow-ffi --allow-net main.ts",
    "start": "scripts.sh start",
    "continue": "scripts.sh continue",
    "list-programs": "solana program-v4 show",
    "clean": "scripts.sh clean",
    "reset": "scripts.sh reset",
    "build": "scripts.sh build",
    "deploy": "scripts.sh deploy",
    "redeploy": "scripts.sh reset-and-deploy",
    "logs": "scripts.sh logs"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/yaml": "jsr:@std/yaml@^1.0.5"
  }
}
